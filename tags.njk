---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
templateClass: tmpl-tag-detail
---
<div class="content-main container">
<h1>Tagged “{{ tag }}”</h1>

{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<div class="wrapper post--next-previous-link">
  <nav class="pagination--inner pagination--previous-only" aria-label="Pagination links">
  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
  </nav>
</div>
</div>