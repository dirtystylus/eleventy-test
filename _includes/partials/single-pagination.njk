{% if nextPost.url or prevPost.url %}
<div class="post--next-previous-link">
<nav class="pagination--inner" aria-label="Pagination links">
{% if nextPost.url %}
  <p class="left">
    <strong>Next</strong>: 
    <a class="next" href="{{ nextPost.url }}">{% markdown %}{{ nextPost.data.display_title or nextPost.data.title }}{% endmarkdown %}</a>
  </p>
{% endif %}
{% if prevPost.url %}
  <p class="right">
    <strong>Previous</strong>: 
    <a class="previous" href="{{ prevPost.url }}">{% markdown %}{{ prevPost.data.display_title or prevPost.data.title }}{% endmarkdown %}</a>
  </p>
{% endif %}
</nav>
</div>
{% endif %}