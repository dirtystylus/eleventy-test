---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="content-main container">
<h1>{{ title }}</h1>
<div class="post--meta"><time>{{ date | readableDate }}</time></div>
{{ content | safe }}
<div class="post--next-previous-link">
{% if nextPost.url %}
  <p class="ctr">
    <strong>Next Post</strong>: 
    <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
  </p>
{% endif %}
{% if prevPost.url %}
  <p class="ctr">
    <strong>Previous Post</strong>: 
    <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
  </p>
{% endif %}
</div>
</article>