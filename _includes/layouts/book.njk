---
layout: layouts/base.njk
templateClass: tmpl-book
---
<article class="content-main container">
<div class="book-details">
  <div class="book-cover book-shadow">
  {# {% figure cover_image, title + " cover image" , "book-thumb" %} #}
  {% endfigure %}
  </div>
  <div class="book-meta">
    <h1>{{ title }}</h1>
    <h2>{{author}}</h2>
    <dl>
      <dt>Publication Date</dt>
      <dd>{{ publication_date | readableDate }}</dd>
      <dt>Genre</dt>
      <dd>{{ genre }}</dd>
      <dt>Format</dt>
      <dd>{{ format }}</dd>
      <dt>Started Reading</dt>
      <dd>{{ reading_start_date | readableDate }}</dd>
      <dt>Finished Reading</dt>
      <dd>{{ reading_end_date | readableDate }}</dd>
    </dl>
  </div>
</div>
<div class="book-body">
{{ content | safe }}
</div>
<div class="book--books-list-link"><a href="{{ '/reading' | url }}">‚Üê All Books</a></div>
</article>