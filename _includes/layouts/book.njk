---
layout: layouts/base.njk
templateClass: tmpl-book
---
<article class="content-main container">
<div class="book-details">
  <div class="book-cover book-shadow">
  {% image cover_image, title + " cover image" , "book_thumb" %}
  </div>
  <div class="book-meta">
    <h1>{{ title }}</h1>
    <h2>{{author}}</h2>
    <dl>
      <dt>Publication Date</dt>
      <dd>{{ publication_date | readableDate }}</dd>
      <dt>Genre</dt>
      <dd>{{ genre }}</dd>
      <dt>Format</dt>
      <dd>{{ format }}</dd>
      <dt>Started Reading</dt>
      <dd>{{ reading_start_date | readableDate }}</dd>
      <dt>Finished Reading</dt>
      <dd>{{ reading_end_date | readableDate }}</dd>
    </dl>
  </div>
</div>
<div class="book-body">
{{ content | safe }}
</div>
<div class="post--next-previous-link">
{% if nextPost.url %}
  <p class="ctr">
    <strong>Next Book</strong>: 
    <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
  </p>
{% endif %}
{% if prevPost.url %}
  <p class="ctr">
    <strong>Previous Book</strong>: 
    <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
  </p>
{% endif %}
</div>
</article>