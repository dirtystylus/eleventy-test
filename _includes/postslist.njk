<ul class="postlist">
{% for post in postslist %}
<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
  <article>
  <a href="{{ post.url | url }}" class="postlist-link"><h2 class="postlist-item-title">{% if post.data.title %}{% markdown %}{{ post.data.display_title or post.data.title }}{% endmarkdown %}{% else %}<code>{{ post.url }}</code>{% endif %}</h2></a>
  <p>{% markdown %}{{ post.data.description }}{% endmarkdown %}</p>
  <span class="post--meta">Published <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
  </span>
  </article>
</li>
{% endfor %}
</ul>
