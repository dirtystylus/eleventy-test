<ul reversed class="postlist">
{% for book in bookslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ book.url | url }}" class="postlist-link">{% if book.data.title %}{{ book.data.title }}{% else %}<code>{{ book.url }}</code>{% endif %}</a> 
    <time class="postlist-date" datetime="{{ book.date | htmlDateString }}">{{ book.date | readableDate }}</time>
    <p>{{ book.data.description }}</p>
  </li>
{% endfor %}
</ul>
