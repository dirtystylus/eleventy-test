<ul reversed class="postlist">
{% for book in bookslist %}
  <li class="postlist-item">
  <a href="{{ book.url | url }}" class="postlist-link">
  <div class="book-details">
  <div class="book-cover book-shadow">
    {% figure book.data.cover_image, "", "book-thumb" %}
    </div>
    <div class="book-meta">
      <h1>{{ book.data.title }}</h1>
      <h2>{{book.data.author}}</h2>
      <dl>
        <dt>Started Reading</dt>
        <dd>{{ book.data.reading_start_date | readableDate }}</dd>
        <dt>Finished Reading</dt>
        <dd>{{ book.data.reading_end_date | readableDate }}</dd>
      </dl>
    </div>
</div>
  </article>
  </a>
  </li>
{% endfor %}
</ul>
